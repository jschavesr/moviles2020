<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal" >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >
        <TextView
            android:id="@+id/human_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Human"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/human_score" />
        <TextView
            android:id="@+id/human_score"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="0"
            android:textSize="20dp"

            android:layout_toLeftOf="@+id/tie_text"/>

        <TextView
            android:id="@+id/tie_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Tie"
            android:textSize="20dp"

            android:layout_toLeftOf="@+id/tie_score" />
        <TextView
            android:id="@+id/tie_score"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="0"
            android:textSize="20dp"

            android:layout_toLeftOf="@+id/android_text" />
        <TextView
            android:id="@+id/android_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="android"
            android:textSize="20dp"

            android:layout_toLeftOf="@+id/android_score" />
        <TextView
            android:id="@+id/android_score"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="0"
            android:textSize="20dp"

            android:layout_alignParentRight="true" />

    </RelativeLayout>

